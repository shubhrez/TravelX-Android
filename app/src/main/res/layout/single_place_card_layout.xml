<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        >
        <ImageView
            android:id="@+id/place_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:elevation="5dp"/>

        <TextView
            android:id="@+id/place_short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/gradient_up"
            android:gravity="center"
            android:layout_alignBottom="@+id/place_image"
            />


        <RelativeLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/place_image"
            android:layout_margin="5dp"
            >

            <TextView
                android:id="@+id/place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajanta Caves"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/place_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="15dp"
                android:layout_below="@+id/place_name"
                android:textColor="#535353"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/tour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHECKOUT"
                android:background="@drawable/tour_border"
                android:layout_alignParentRight="true"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:layout_alignBottom="@+id/place_location"
                />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>